<Window x:Class="tic_tac_toe.PongGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tic_tac_toe"
        mc:Ignorable="d"
        Title="PongGame" Height="450" Width="800" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Back" Height="30" x:Name="Button_back" Click="Button_back_Click"/>
            <Label Content="Player 1: 0" x:Name="lblPongPlayer1" Grid.Column="2" HorizontalAlignment="Left" FontWeight="Bold"/>
            <Label Content="Player 2: 0" x:Name="lblPongPlayer2" Grid.Column="2" HorizontalAlignment="Center" FontWeight="Bold"/>
        </Grid>
        <Canvas Background="Black" x:Name ="Pongscreen" Focusable="True" Grid.Row="1" KeyUp="KeyIsUp" KeyDown="KeyIsDown">
            
            
            
            <Ellipse Name="Ball" Height="20" Width="20" Fill="Red" Canvas.Left="900" Canvas.Top="150" ></Ellipse>
            <Rectangle Fill="#FFF4F4F5" Tag="Enemak" x:Name="Player2" Height="110" Canvas.Right="0" Stroke="Black" Canvas.Top="147" Width="25"/>
            <Rectangle Fill="#FFF4F4F5" Tag="Hrac1" x:Name="Player1" Height="110" Canvas.Left="0" Stroke="Black" Canvas.Top="147" Width="25"/>
        </Canvas>
    </Grid>
</Window>
